{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  // "include": [
  //   "./src/**/*",
  //   "./__test__/**/*",
  //   "./migrations/**/*",
  //   "./seeds/**/*"
  // ],
  "exclude": [
    "node_modules"
  ]
}