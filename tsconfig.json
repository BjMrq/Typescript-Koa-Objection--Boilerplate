{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": ".",
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  // "include": [
  //   "./src/**/*",
  //   "./__test__/**/*",
  //   "./migrations/**/*",
  //   "./seeds/**/*"
  // ],
  "exclude": [
    "node_modules"
  ]
}